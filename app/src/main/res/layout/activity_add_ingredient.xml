<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rest"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/ImgHomePage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imgLogo"
        android:layout_alignBottom="@+id/imgLogo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imgLogo"
        android:src="@mipmap/ic_home" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="@string/menu_s_cost"
        android:textColor="@color/colorAccent"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Ingredient's name:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/edtName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtInfo"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="#FFFFFF"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Grams:"
        android:textAlignment="center"
        android:id="@+id/txtGram"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/edtGram"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtGram"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtGram"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Your distance:"
        android:textAlignment="center"
        android:id="@+id/txtDist"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/edtDist"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtDist"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDisab"
        android:layout_below="@+id/edtDist"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Disabilities (yes/no):"/>


    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:id="@+id/edtDisab"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtDisab"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:background="#FFFFFF"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnAddIngr"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/edtDisab"
        android:layout_marginTop="15dp"
        android:text="Add"
        android:layout_centerHorizontal="true" />






</RelativeLayout>