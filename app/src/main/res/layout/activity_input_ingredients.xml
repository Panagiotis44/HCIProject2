<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rest"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/ImgHomePage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imgLogo"
        android:layout_alignBottom="@+id/imgLogo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imgLogo"
        android:src="@mipmap/ic_home" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="@string/menu_s_cost"
        android:textColor="@color/colorAccent"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Create a delicious menu!"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnSelect"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtInfo"
        android:layout_marginTop="25dp"
        android:text="Select ingredients"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnSelect"
        android:layout_marginTop="15dp"
        android:text="Create your own ingredient"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnShowIngr"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btnAdd"
        android:layout_marginTop="15dp"
        android:text="See the ingredients of this recipe"
        android:layout_centerHorizontal="true" />

</RelativeLayout>