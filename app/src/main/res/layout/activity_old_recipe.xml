<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rest"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/ImgHomePage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imgLogo"
        android:layout_alignBottom="@+id/imgLogo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imgLogo"
        android:src="@mipmap/ic_home" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="@string/menu_s_cost"
        android:textColor="@color/colorAccent"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="See your old recipes:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/recipe_spinner"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:popupBackground="@color/colorAccent"
        android:textAlignment="center"
        android:entries="@array/old_recipes"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/btnShowRecipe"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/recipe_spinner"
        android:layout_marginTop="20dp"
        android:text="Show me the Recipe"/>

    <Button
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:id="@+id/btnEditRecipe"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnShowRecipe"
        android:layout_marginTop="20dp"
        android:text="Edit the Recipe"/>




</RelativeLayout>